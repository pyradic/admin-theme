            :code="{{ code }}"
            name="{{ name }}"
            summary="{{ summary }}"
            message="{{ message }}"
            error-id="{{ id }}"
            :debug="{{ config('app.debug', false) ? 'true':'false' }}"
    ></py-http-error>
{% endblock %}
