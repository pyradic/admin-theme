{# @var \Anomaly\Streams\Platform\View\ViewTemplate template #}
<!doctype html>

<html lang="{{ locale() }}">

<head>

    {% include "platform::before_metadata" %}
    {% include "theme::partials/metadata" %}
    {% include "platform::after_metadata" %}
    {% block head %}
    {% endblock %}
</head>

<body class="{{ locale().isRtl() ? ' rtl' }}">
{% block body %}
    <div id="app">
        <py-layout inner-padding="0 20px">

            <template #pre-header>
                {% block pre_header %}
                    {% include "theme::partials/pre-header" %}
                {% endblock %}
            </template>

            <template #header>
                {% block header %}
                    {% include "theme::partials/header" %}
                {% endblock %}
            </template>

            <template #sidebar>
                {% block sidebar %}
                    {% include "theme::partials/sidebar" %}
                {% endblock %}
            </template>

            <template v-slot:breadcrumbs="{breadcrumbs}">
                {% block breadcrumbs %}
                    {% include 'theme::partials/breadcrumbs' %}
                {% endblock %}
            </template>

            <template #buttons="{buttons}">
                {% block buttons %}
                    {% include 'theme::partials/buttons' %}
                {% endblock %}
            </template>

            <template #messages>
                <portal-target name="messages"></portal-target>
                {% block messages %}
                    {% include "theme::partials/messages" %}
                {% endblock %}
            </template>

            <template #default >
                {% block content %}{% endblock %}
            </template>

            <template #footer>
                <portal-target name="footer"></portal-target>
                {% block footer %}
                    {% include "theme::partials/footer" %}
                {% endblock %}
            </template>

        </py-layout>
        {% include "theme::partials/modals" %}
    </div>
{% endblock %}




{% block assets %}
    {% include "platform::assets" %}
    {#{% include "theme::partials/assets" %}#}
{% endblock %}
</body>
</html>
